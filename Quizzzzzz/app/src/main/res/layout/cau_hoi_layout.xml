<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/credit_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TroChoiActivity">

    <TextView
        android:id="@+id/textView_credit2"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:drawableLeft="@drawable/icon_diamon_30"
        android:textAlignment="textEnd"
        android:textColor="#FFFF"
        android:textSize="18sp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_border3"
        app:layout_constraintEnd_toEndOf="@+id/imageView_border3"
        app:layout_constraintStart_toStartOf="@+id/imageView_border3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_chance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="user123"
        android:textAlignment="viewStart"
        android:textColor="#FFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_border1"
        app:layout_constraintEnd_toEndOf="@+id/imageView_border1"
        app:layout_constraintStart_toStartOf="@+id/imageView_border1"
        app:layout_constraintTop_toTopOf="@+id/imageView_border1" />

    <ImageButton
        android:id="@+id/imageButton_ask_audience"
        android:layout_width="73dp"
        android:layout_height="55dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="24dp"
        android:background="#8FBC8F"
        app:layout_constraintEnd_toStartOf="@+id/button_mua_cau_hoi"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_people_64" />

    <ImageButton
        android:id="@+id/imageButton_dialer"
        android:layout_width="70dp"
        android:layout_height="56dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="24dp"
        android:background="#8FBC8F"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_ask_audience"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_phone_64" />

    <Button
        android:id="@+id/button_50_50"
        android:layout_width="68dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="24dp"
        android:background="#8FBC8F"
        android:text="50:50"
        android:textColor="#347C17"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_dialer"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_mua_cau_hoi"
        android:layout_width="88dp"
        android:layout_height="55dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20dp"
        android:background="#8FBC8F"
        android:drawableRight="@drawable/icon_diamon_30"
        android:text="100"
        android:textColor="#347C17"
        android:textSize="24sp"
        android:onClick="muaDapAn"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_Diem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Điểm:"
        android:textColor="	#FF0000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_cau_hoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Câu hỏi"
        android:textColor="#FFFF00"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Diem" />

    <TextView
        android:id="@+id/textView_number"
        android:layout_width="69dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border"
        android:backgroundTint="#1E90FF"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_cau_hoi" />

    <TextView
        android:id="@+id/textView_noi_dung_cau_hoi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Chỗ này để show câu hỏi !!!"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_number" />

    <ImageView
        android:id="@+id/imageView_border1"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/border" />

    <ImageView
        android:id="@+id/imageView_border3"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/border" />

    <Button
        android:id="@+id/button_dap_an_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@android:dimen/notification_large_icon_width"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@android:dimen/notification_large_icon_height"
        android:background="#1E90FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_noi_dung_cau_hoi" />

    <Button
        android:id="@+id/button_dap_an_b"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:background="#1E90FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_dap_an_a" />

    <Button
        android:id="@+id/button_dap_an_c"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:background="#1E90FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_dap_an_b" />

    <Button
        android:id="@+id/button_dap_an_d"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:background="#1E90FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_dap_an_c" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#8FBC8F"
        android:text="Câu tiếp theo"
        android:onClick="tieptheo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_home"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/icon_home_40" />

    <TextView
        android:id="@+id/textView_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="30s"
        android:textColor="#FFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_dap_an_d" />

    <ImageView
        android:id="@+id/imageView_heart1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView_chance"
        app:layout_constraintEnd_toEndOf="@+id/imageView_border1"
        app:layout_constraintTop_toTopOf="@+id/textView_chance"
        app:srcCompat="@drawable/icon_heart_30" />

    <ImageView
        android:id="@+id/imageView_heart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView_chance"
        app:layout_constraintEnd_toStartOf="@+id/imageView_heart1"
        app:layout_constraintTop_toTopOf="@+id/textView_chance"
        app:srcCompat="@drawable/icon_heart_30" />

    <ImageView
        android:id="@+id/imageView_heart3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView_chance"
        app:layout_constraintEnd_toStartOf="@+id/imageView_heart2"
        app:layout_constraintTop_toTopOf="@+id/textView_chance"
        app:srcCompat="@drawable/icon_heart_30" />

    <ImageView
        android:id="@+id/imageView_heart4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView_chance"
        app:layout_constraintEnd_toStartOf="@+id/imageView_heart3"
        app:layout_constraintTop_toTopOf="@+id/textView_chance"
        app:srcCompat="@drawable/icon_heart_30" />

    <ImageView
        android:id="@+id/imageView_heart5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView_chance"
        app:layout_constraintEnd_toStartOf="@+id/imageView_heart4"
        app:layout_constraintTop_toTopOf="@+id/textView_chance"
        app:srcCompat="@drawable/icon_heart_30" />

</androidx.constraintlayout.widget.ConstraintLayout>